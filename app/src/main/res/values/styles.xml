<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="customSpinnerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/indigoDark</item>
        <item name="colorControlActivated">@color/indigoLight</item>
        <item name="colorControlHighlight">@color/indigoLight</item>
    </style>
</resources>
